<h1><%= gravatar_for @user %><%= @user.email %></h1>

<h4>Add your latest round:</h4>
<div>
  <%= render 'rounds/form' %>
</div>

<div>
<% if @user.rounds.any? %>

<table class='rounds-table'>
  <thead>
    <tr>
      <th class="rounds-table-title"colspan="8">All Rounds</th>
    </tr>
    <tr>
      <th class="round-data-type">Holes</td>
      <th class="round-data-type">Course</td>
      <th class="round-data-type">Date</td>
      <th class="round-data-type">Par</td>
      <th class="round-data-type">Score</td>
      <th class="round-data-type">Difficulty</th>
      <th class="round-data-type">Drinking</th>
      <th class="round-data-type">Comments</th>
    </tr>
  </thead>
  <tbody>
    <% @user.rounds.each do |round| %>
    <tr>
      <td class="round-data"><%= round.holes %></td>
      <td class="round-data"><%= round.course %></td>
      <td class="round-data"><%= round.date %></td>
      <td class="round-data"><%= round.par %></td>
      <td class="round-data"><%= round.score %></td>
      <td class="round-data"><%= round.difficulty %></td>
      <td class="round-data"><%= round.drinking? %></td>
      <td class="round-data"><%= link_to 'Comments', '#' %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<% else %>

<h4>You have not uploaded any Rounds yet!</h4>

<% end %>
</div>